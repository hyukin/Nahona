<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/home_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/buyvPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#ffffff"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="409dp"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/quick_home"
                android:layout_width="276dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/quick_shopping"
                android:layout_width="276dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/shoping" />

            <ImageView
                android:id="@+id/quick_chat"
                android:layout_width="276dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/chat" />

            <ImageView
                android:id="@+id/quick_board"
                android:layout_width="276dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/bulletin" />

            <ImageView
                android:id="@+id/quick_setting"
                android:layout_width="276dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/setting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sub_q_home"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:font="@font/hanna11"
                android:gravity="center"
                android:text="홈" />

            <TextView
                android:id="@+id/sub_q_shopping"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:font="@font/hanna11"
                android:gravity="center"
                android:text="쇼핑" />

            <TextView
                android:id="@+id/sub_q_chat"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:font="@font/hanna11"
                android:gravity="center"
                android:text="채팅" />

            <TextView
                android:id="@+id/sub_q_board"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:font="@font/hanna11"
                android:gravity="center"
                android:text="게시판" />

            <TextView
                android:id="@+id/sub_q_setting"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:font="@font/hanna11"
                android:gravity="center"
                android:text="설정" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>